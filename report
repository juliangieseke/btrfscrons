#!/usr/bin/env bash

set -e

# debug
DEBUG=${DEBUG:-''}
[ -n "${DEBUG}" ] && set -x

# set SCRIPT_PATH, used for external refs
SCRIPT_PATH="$(cd $(dirname "$0")/$(dirname "$(readlink "$0")") && pwd)"

echo Status Report for $(hostname)
echo ==============================================
echo
cat /var/run/motd.dynamic
echo ==============================================
echo
echo Disk Info
hddtemp -w /dev/sd?
df -hl | grep /$
df -hl | grep /mnt/disk
echo
echo
echo ==============================================
echo
echo Mounts "(Count: $(mount | grep /mnt | wc -l))"
mount | grep /mnt | cut -d \( -f1
echo
echo
echo ==============================================
echo
echo Latest Cron Logs
tail -n 100 /mnt/cron.log

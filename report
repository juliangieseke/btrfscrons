#!/usr/bin/env bash

set -e

# debug
DEBUG=${DEBUG:-''}
[ -n "${DEBUG}" ] && set -x

# set SCRIPT_PATH, used for external refs
SCRIPT_PATH="$(cd $(dirname "$0")/$(dirname "$(readlink "$0")") && pwd)"

echo Status Report for $(hostname)
echo ==============================================
echo
cat /var/run/motd.dynamic
echo ==============================================
echo
echo Disk usage
df -hl
echo
echo
echo ==============================================
echo
echo Mounts
mount | grep /mnt
echo "Count: $(mount | grep /mnt | wc -l)"
echo
echo
echo ==============================================
echo
echo Latest cron logs
tail -n 20 ${SCRIPT_PATH}/cron.log
echo
echo
echo ==============================================
echo
echo Latest syslog
journalctl | tail -n 50

#!/usr/bin/env bash

set -e

DEBUG=${DEBUG:-''}
[ -n "${DEBUG}" ] && set -x

lockfile -600 -r5  "${SCRIPT_PATH}/bkp.${JOBNAME}.lock"
trap '[ $? -ne 0 ] && echo "‚ùå Stopped with errors."; rm -f "${SCRIPT_PATH}/bkp.${JOBNAME}.lock"; trap - EXIT' EXIT SIGINT
echo -e "\nüöõ Starting '${JOBNAME}' ($(date))"

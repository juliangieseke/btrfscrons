#!/usr/bin/env bash

set -e

DEBUG=${DEBUG:-''}
[ -n "${DEBUG}" ] && set -x


LOCKFILE="${BASE_PATH}/lock/${JOBNAME}.lock"
PIDFILE="${BASE_PATH}/lock/${JOBNAME}.pid"

trap 'EC=$?; [ $EC -ne 0 ] && echo "âŒ Exitcode $EC in $0 at $(date)."; rm -f "${LOCKFILE}"; trap - EXIT' EXIT SIGINT
lockfile -600 -r5  "${LOCKFILE}"
echo $$ > "${PIDFILE}"


echo -e "ðŸš› Starting at $(date)"

function displaytime {

  T=${1}

  D=$((T/60/60/24))
  H=$((T/60/60%24))
  M=$((T/60%60))
  S=$((T%60))

  [[ $D > 1 ]] && printf '%d days ' $D
  [[ $D == 1 ]] && printf '%d day ' $D
  [[ $H > 1 ]] && printf '%d hours ' $H
  [[ $H == 1 ]] && printf '%d hour ' $H
  [[ $M > 1 ]] && printf '%d minutes ' $M
  [[ $M == 1 ]] && printf '%d minute ' $M
  [[ $D > 0 || $H > 0 || $M > 0 ]] && printf 'and '
  [[ $S > 1 || $S == 0 ]] && printf '%d seconds' $S || printf '%d second' $S

}

#!/bin/bash

/mnt/.bkp/bin/run snapshot-cleanup /mnt/data.disk/resilio.snapshots

if [ "$(hostname)" == "Datenteich" ]
then
    /mnt/.bkp/bin/run snapshot-cleanup /mnt/data.disk/datenteich.snapshots
    /mnt/.bkp/bin/run snapshot-cleanup /mnt/boot.disk/rootfs.snapshots
fi

if [ "$(hostname)" == "Speichersee" ]
then
    /mnt/.bkp/bin/run snapshot-cleanup /mnt/data.disk/speichersee.snapshots
fi
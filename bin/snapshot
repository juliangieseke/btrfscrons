#!/usr/bin/env bash

set -e

DEBUG=${DEBUG:-''}
[ -n "${DEBUG}" ] && set -x

# set SCRIPT_PATH
SCRIPT_PATH="$(cd $(dirname "$0")/$(dirname "$(readlink "$0")") && pwd)"

SUBVOLUME=${1:-''}
CRONTYPE=${2:-'hourly'}
KEEPDAYS=${3:-'1'}

${SCRIPT_PATH}/snapshot-create ${SUBVOLUME} ${CRONTYPE} ${KEEPDAYS}
${SCRIPT_PATH}/snapshot-cleanup ${SUBVOLUME} ${CRONTYPE} ${KEEPDAYS}
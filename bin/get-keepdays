#!/usr/bin/env bash

JOBTYPE=${1:-''}
if [ -z "${JOBTYPE}" ]
then
  echo "ERROR: No \$JOBTYPE given." 2>&1
  exit 1
fi

case ${JOBTYPE} in
  hourly)
    KEEPDAYS=1
    ;;
  daily)
    KEEPDAYS=30
    ;;
  weekly)
    KEEPDAYS=90
    ;;
  monthly)
    KEEPDAYS=360
    ;;
esac


echo ${KEEPDAYS}
exit 0
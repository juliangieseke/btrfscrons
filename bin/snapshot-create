#!/usr/bin/env bash

set -e

DEBUG=${DEBUG:-''}
[ -n "${DEBUG}" ] && set -x

# set SCRIPT_PATH
SCRIPT_PATH="$(cd $(dirname "$0")/$(dirname "$(readlink "$0")") && pwd)"

SUBVOLUME=${1:-''}
CRONTYPE=${2:-'hourly'}
KEEPDAYS=${3:-'1'}

SNAPSHOTNAME="$(date '+%F-%H-%M-%S')-${CRONTYPE}"
# [ -d "${SUBVOLUME}.snapshots/${SNAPSHOTNAME}" ] && SNAPSHOTNAME="$(date '+%F %H-%M') ${CRONTYPE}"
# [ -d "${SUBVOLUME}.snapshots/${SNAPSHOTNAME}" ] && SNAPSHOTNAME="$(date '+%F %H-%M-%S') ${CRONTYPE}"
[ -d "${SUBVOLUME%/}.snapshots/${SNAPSHOTNAME}" ] && ( echo "ERROR: '${SNAPSHOTNAME}' already exists." 1>&2; exit 1 )

# update timestamp, fails if subvolume is ""
touch ${SUBVOLUME}

echo "ðŸ“¸ Create snapshot '${SNAPSHOTNAME}'"
btrfs subvolume snapshot -r "${SUBVOLUME}" "${SUBVOLUME%/}.snapshots/${SNAPSHOTNAME}" > /dev/null

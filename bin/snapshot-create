#!/usr/bin/env bash

set -e

DEBUG=${DEBUG:-''}
[ -n "${DEBUG}" ] && set -x

SRC=${1:-''}
DST_SNAP=${2:-''}
JOBTYPE=${3:-'hourly'}

SNAPSHOTNAME="$(date '+%F-%H-%M-%S')-${JOBTYPE}"
[ -d "${DST_SNAP%/}/${SNAPSHOTNAME}" ] && ( echo "ERROR: '${SNAPSHOTNAME}' already exists."; exit 1 )

# update timestamp, fails if SRC is ""
touch ${SRC}

btrfs subvolume snapshot -r "${SRC}" "${DST_SNAP%/}/${SNAPSHOTNAME}"

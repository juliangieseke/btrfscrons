#!/usr/bin/env bash

set -e

DEBUG=${DEBUG:-''}
[ -n "${DEBUG}" ] && set -x

FORCE_LOCAL=${FORCE_LOCAL:-''}
FORCE_REMOTE=${FORCE_REMOTE:-''}
RSYNCOPTS="${RSYNCOPTS:-""}"

# set BASE_PATH
BASE_PATH="$(cd $(dirname "$0")/$(dirname "$(readlink "$0")") && cd .. && pwd)"

# lockfile and traps
JOBNAME='datenteich'
source ${BASE_PATH}/inc/header

#config
SRC='/mnt/data.disk/datenteich/'
DST_SNAP='/mnt/data.disk/datenteich.snapshots/'
DST_SEND='/mnt/backups.disk/datenteich.snapshots/'
DST_REMOTE='datenteich@192.168.152.11:/mnt/backups.disk/datenteich/'
DST_REMOTE_BACKUPDIR='/mnt/backups.disk/datenteich.backups/'
VPN_CONF='bms'

# gets $JOBNAME
# sets $JOBTYPE
source ${BASE_PATH}/inc/jobtype

# gets $JOBTYPE
# sets $KEEPDAYS
source ${BASE_PATH}/inc/keepdays

#################################################

# run local backups, if not hourly
if [[ -n "${FORCE_LOCAL}" || ${JOBTYPE} != 'hourly' ]]
then
  ${BASE_PATH}/bin/retry-local ${JOBTYPE} ${SRC} ${DST_SNAP} ${DST_SEND}
fi

# run remote backups, if not hourly
if [[ -n "${FORCE_REMOTE}" || ${JOBTYPE} != 'hourly' ]]
then
  ${BASE_PATH}/bin/retry-remote ${JOBTYPE} ${SRC} ${DST_REMOTE} ${DST_REMOTE_BACKUPDIR} ${VPN_CONF}
fi
